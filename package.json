{
  "type": "module",
  "name": "vite-starter",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "author": {
    "name": "Erwan Jugand",
    "url": "https://erwan-jugand.fr/"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "check:ts": "tsc --noEmit",
    "check:prettier": "prettier --check .",
    "check:eslint": "eslint .",
    "check:stylelint": "stylelint **/*.{scss,sass}",
    "check:all": "pnpm check:ts && pnpm check:prettier && pnpm check:eslint && pnpm check:stylelint",
    "fix:prettier": "prettier --loglevel warn --write .",
    "fix:eslint": "pnpm check:eslint --fix",
    "fix:stylelint": "pnpm check:stylelint --fix",
    "fix:all": "pnpm fix:prettier && pnpm fix:eslint && pnpm fix:stylelint"
  },
  "devDependencies": {
    "eslint": "9.31.0",
    "eslint-config-prettier": "10.1.8",
    "jiti": "2.4.2",
    "prettier": "3.6.2",
    "sass": "1.89.2",
    "stylelint": "16.22.0",
    "stylelint-config-standard-scss": "15.0.1",
    "stylelint-order": "7.0.0",
    "the-new-css-reset": "1.11.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.37.0",
    "vite": "7.0.5"
  }
}
