{
  "type": "module",
  "name": "vite-starter",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "author": {
    "name": "Erwan Jugand",
    "url": "https://erwan-jugand.fr/"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "check:ts": "tsc --noEmit",
    "check:prettier": "prettier --check .",
    "check:lint": "oxlint",
    "check:stylelint": "stylelint **/*.{scss,sass}",
    "check:all": "pnpm check:ts && pnpm check:prettier && pnpm check:lint && pnpm check:stylelint",
    "fix:prettier": "prettier --log-level warn --write .",
    "fix:lint": "pnpm check:lint --fix --fix-suggestions",
    "fix:stylelint": "pnpm check:stylelint --fix",
    "fix:all": "pnpm fix:prettier && pnpm fix:lint && pnpm fix:stylelint"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "0.0.4",
    "oxlint": "1.11.2",
    "prettier": "3.6.2",
    "sass": "1.90.0",
    "stylelint": "16.23.1",
    "stylelint-config-recess-order": "7.2.0",
    "stylelint-config-standard-scss": "15.0.1",
    "stylelint-order": "7.0.0",
    "the-new-css-reset": "1.11.3",
    "typescript": "5.9.2",
    "vite": "7.1.2"
  }
}
