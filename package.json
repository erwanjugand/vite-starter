  "scripts": {
    "dev": "webpack --mode=development",
    "build": "webpack --mode=production",
    "check:prettier": "prettier --check .",
    "check:eslint": "eslint --ext .ts .",
    "check:stylelint": "stylelint **/*.{scss,sass}",
